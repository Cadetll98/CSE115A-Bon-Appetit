<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CookingAppTheme" parent="android:Theme.Material.Light">
        <item name="android:statusBarColor">@color/black</item>
    </style>
    <style name="Theme.SplashScreen" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>
    <style name="Theme.CookingAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CookingAppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CookingAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>